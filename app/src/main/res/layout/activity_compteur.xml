<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3f3e"

    tools:context=".Compteur">

    <LinearLayout
        android:id="@+id/demi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/deuxm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:onClick="incre_decre"
            android:tag="-0.5"
            android:text="-1/2" />

        <TextView
            android:id="@+id/centre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="3"
            android:gravity="center"
            android:text="5atma"
            android:textColor="#333"
            android:textSize="40sp" />

        <Button
            android:id="@+id/deux"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:onClick="incre_decre"
            android:tag="+0.5"
            android:text="+1/2" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/quart"
        android:layout_above="@id/demi"

        android:orientation="horizontal">

        <Button
            android:id="@+id/quatremm"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="90dp"
            android:onClick="incre_decre"
            android:tag="-0.25"
            android:text="-1/4" />

        <Button
            android:id="@+id/quatr"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="30dp"
            android:onClick="incre_decre"
            android:tag="+0.25"
            android:text="+1/4" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/demi"
        android:id="@+id/troisquart"


        android:orientation="horizontal">


        <Button
            android:id="@+id/troishuitm"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="90dp"
            android:onClick="incre_decre"
            android:tag="-0.75"
            android:text="-3/8" />

        <Button
            android:id="@+id/troishuit"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="30dp"
            android:onClick="incre_decre"
            android:tag="+0.75"
            android:text="+3/8" />

    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_above="@id/quart"
    android:orientation="horizontal">


    <Button
        android:id="@+id/huitm"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginLeft="120dp"
        android:layout_marginRight="5dp"
        android:onClick="incre_decre"
        android:tag="-0.125"
        android:text="-1/8" />

    <Button
        android:id="@+id/huit"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="120dp"
        android:onClick="incre_decre"
        android:tag="+0.125"
        android:text="+1/8"

        />
</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/troisquart"
    android:orientation="horizontal">

    <Button
        android:id="@+id/button4"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginRight="5dp"
        android:onClick="incre_decre"
        android:tag="-1"
        android:text="-1" />

    <Button
        android:id="@+id/button5"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="120dp"
        android:onClick="incre_decre"
        android:tag="+1"
        android:text="+1" />

</LinearLayout>










</RelativeLayout>