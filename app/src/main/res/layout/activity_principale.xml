<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3f3e"
    tools:context=".Principale">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/b1"
    android:layout_centerHorizontal="true"
    android:layout_above="@id/b2"
    android:orientation="horizontal">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:tag="1"
        android:onClick="gotoactivity"
        android:text="          الختمة           "/>
</LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b2"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/b3"
        android:orientation="horizontal">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:tag="2"
        android:onClick="gotoactivity"
        android:text="برنامج لختم القرآن "/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/b3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_centerInParent="true"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:tag="3"
            android:onClick="gotoactivity"
            android:text="        أذكار الصباح    " />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b4"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/b3"
        android:orientation="horizontal">
        <Button
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="4"
            android:onClick="gotoactivity"
            android:text="        أذكار المساء     "/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b5"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/b4"
        android:orientation="horizontal">
        <Button
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="5"
            android:onClick="gotoactivity"
            android:text="         ثقف نفسك     "/>
    </LinearLayout>
</RelativeLayout>